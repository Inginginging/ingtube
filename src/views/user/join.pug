extends ../base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="name", type="text", required, placeholder="Name")
        input(name="username", type="text", required, placeholder="Username")
        input(name="password", type="password", required, placeholder="Password. more than 8 words", minlength=8)
        input(name="password2", type="password", required, placeholder="Confirm your Password", minlength=8)
        input(name="email", type="email", required, placeholder="Email")
        input(name="location", type="text", required, placeholder="Location")
        input(type="submit", value="Join")
    hr
    span Already have an Account? 
    a(href="/login") Login now &rarr;