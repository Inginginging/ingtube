extends ../base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST" enctype="multipart/form-data").edit-profile_form
        label(for="avatar") Avatar
        input(name="avatar", type="file", id="avatar", accept="image/*")  
        input(name="name", type="text", required, placeholder="Name", value=loggedInUser.name, )
        input(name="username", type="text", required, placeholder="Username", value=loggedInUser.username, )
        input(name="email", type="email", required, placeholder="Email", value=loggedInUser.email, )
        input(name="location", type="text",  placeholder="Location", value=loggedInUser.location, )
        input(type="submit", value="Update Profile")
        if !loggedInUser.socialOnly
            div.edit-profile_pw
                a(href="/users/change-password") Change Password &rarr;