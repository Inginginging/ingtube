extends ../base
include ../mixins/video    

block content
    div.profile_data
        if (loggedInUser.avatarUrl === "" || false) || loggedInUser.socialOnly === false
            i.fas.fa-user-circle
        else
            img(src=`${user.avatarUrl}`, crossorigin).avatar 
        h3=user.username
        br
        if String(user._id) === String(loggedInUser._id)
            a(href=`/users/edit`) Edit Profile
    div.video-grid
        each video in user.videos 
            +video(video)
        else 
            span.empty_messsage No videos found...